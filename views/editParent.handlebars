<section class="new-parent">
    <section class="w-75 mx-auto">
        <form id="myForm">
            <div class="form-row">
                <div class="form-group px-4 col-md-6">
                    <label for="inputFirstName">First Name</label>
                    <input type="text" class="form-control" id="fname" placeholder="First name" name="fname" value="{{parent.name}}">
                </div>
                <div class="form-group  px-4  col-md-6">
                    <label for="inputLastName">Last Name</label>
                    <input type="text" class="form-control" id="lname" placeholder="Last name" name="lname" value="">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group px-4  col-md-6">
                    <label for="inputEmail4">Email</label>
                    <input type="email" class="form-control" id="parentEmail" placeholder="parent@mail.com" name="email" value="{{parent.email}}">
                </div>
                <div class="form-group px-4  col-md-6">
                    <label for="inputEmail4">Student Email</label>
                    <input type="email" class="form-control" id="studentEmail" placeholder="student@mail.com" name="studentEmail" value="{{parent.studentEmail}}">
                </div>
            </div>
            <div class="form-row">
                <fieldset class="form-group px-4  col-md-6">
                    <div class="row">
                        <legend class="col-form-label col-sm-2 pt-0 pl-0">Gender</legend>
                        <div class="col-sm-10">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gender" id="g1" value="male"
                                       checked>
                                <label class="form-check-label" for="g1">
                                    Male
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gender" id="g2" value="femal">
                                <label class="form-check-label" for="g2">
                                    Femal
                                </label>
                            </div>
                        </div>
                    </div>
                </fieldset>

                <div class="form-group px-4  col-md-6">
                    <label for="inputPassword4">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Password" name="password" value="{{parent.password}}">
                </div>
            </div>


        </form>
        <button type="submit" class="btn btn-outline-secondary m-4" onclick="editParentData('/parent/{{parent._id}}')">Submit</button>
    </section>
</section>