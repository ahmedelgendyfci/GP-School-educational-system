<div>
    {{>header}}
</div>
<div class="container my-5 do-exam border p-0">
    <table class="table table-striped table-dark p-0">
        <!--        {{exam}}-->
        <tbody>
        <tr>
            <td>Subject:</td>
            <td>{{exam.subject}}</td>
            <td>Level:</td>
            <td>{{exam.level}}</td>
        </tr>
        <tr>
            <td>Exam Type:</td>
            <td>{{exam.examType}}</td>
            <td>Deadline:</td>
            <td>{{exam.deadline}}</td>
        </tr>
        <tr>
            <td>Mark:</td>
            <td>{{exam.mark}}</td>
            <td>Teacher Email:</td>
            <td>{{exam.teacherEmail}}</td>
        </tr>
        </tbody>
    </table>


    <form method="POST" action="/createResult" class="p-4">
        <input type="hidden" name="examID" value="{{exam._id}}">
        <h5>MCQ</h5>
        <hr>
        <div class="row">
            {{#each mcqQuestions}}
                <div class="col-12 mb-2">
                    <strong>{{content}}</strong>
                </div>
                <div class="col-12 pl-3 mb-5">
                    {{#each choice}}
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="{{id}}"
                                   value="{{choiceNumber}}">
                            <label class="form-check-label">
                                <span>{{choiceNumber}}: </span>{{choiceContent}}
                            </label>
                        </div>
                    {{/each}}
                </div>
            {{/each}}
        </div>

        <br><br><br>
        <h5>Correct</h5>
        <hr>
        <div class="row">
            {{#each correctQuestions}}
                <div class="col-12 mb-3 ">
                    <strong>{{content}}</strong>
                </div>
                <div class="col-12 pl-5">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="{{id}}"
                               value="true">
                        <label class="form-check-label">
                            True
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="{{id}}"
                               value="false">
                        <label class="form-check-label">
                            False
                        </label>
                    </div>
                </div>
            {{/each}}
        </div>


        <button class="btn btn-outline-info">Submit</button>
    </form>

</div>
<footer>
    {{>footer}}
</footer>