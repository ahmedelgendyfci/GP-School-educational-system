<div>
    {{>header}}
</div>

<div class="head p-5 text-center">
    Events
</div>

<section class="events-page py-5">

{{#each events}}
    <div class="card mb-5 w-75 mx-auto">
        <div class="row no-gutters d-flex align-items-center">
            <div class="col-md-4 text-center">
                <img src="imgs/img_1.jpg" class="card-img w-75" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h4><a href="">
                        {{eventTitle}}
                    </a></h4>
                    <hr class="w-25">
                    <p class="dsc">
                        {{description}}
                    </p>
                    <div class="date">
                        <strong>
                            <span>{{eventDate}}</span>
                        </strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/each}}

</section>
<footer>
    {{>footer}}
</footer>