<section class="new-teacher">
    <section class="w-75 mx-auto">
        <form>
            <div class="form-row">
                <div class="form-group px-4 col-md-6">
                    <label for="inputFirstName">First Name</label>
                    <input type="text" class="form-control" id="fname" placeholder="First name">
                </div>
                <div class="form-group  px-4  col-md-6">
                    <label for="inputLastName">Last Name</label>
                    <input type="text" class="form-control" id="lname" placeholder="Last name">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group px-4  col-md-6">
                    <label for="inputEmail4">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="example@mail.com">
                </div>
                <div class="form-group px-4  col-md-6">
                    <label for="inputPassword4">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Student password">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group px-4  col-md-6">
                    <label for="inputAddress">Address</label>
                    <input type="text" class="form-control" id="address" placeholder="1234 Main St">
                </div>
                <div class="form-group px-4  col-md-6">
                    <label for="inputNumber">Phone Number</label>
                    <input type="number" class="form-control" id="phoneNumber" placeholder="1023456789">
                </div>
            </div>
            <div class="form-row">
                <fieldset class="form-group px-4  col-md-6">
                    <div class="row">
                        <legend class="col-form-label col-sm-2 pt-0 pl-0">Gender</legend>
                        <div class="col-sm-10">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gender" id="g1" value="male"
                                       checked>
                                <label class="form-check-label" for="g1">
                                    Male
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gender" id="g2" value="femal">
                                <label class="form-check-label" for="g2">
                                    Femal
                                </label>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
        </form>
        <button type="submit" class="btn btn-outline-secondary m-4" onclick="sendLibrarianData()">Submit</button>
    </section>
</section>