<div>
    {{>header}}
</div>
<div class="container new-question">

    <form class="m-5" action="/newQuestion" method="post">
        <fieldset>
            <legend>Choice Question:</legend>
            <input type="hidden" name="type" value="choice">

            <div class="form-group">
                <label>Course</label>
                <input type="text" class="form-control" placeholder="Course Title" name="course">
            </div>
            <div class="form-group">
                <label>Question Content</label>
                <textarea name="content" class="form-control" rows="3"></textarea>
            </div>
            <div class="form-group">
                <label>1st Choice</label>
                <input type="text" class="form-control" placeholder="firstChoice " name="firstChoice">
            </div>
            <div class="form-group">
                <label>2nd Choice</label>
                <input type="text" class="form-control" placeholder="secondChoice" name="secondChoice">
            </div>
            <div class="form-group">
                <label>3rd Choice</label>
                <input type="text" class="form-control" placeholder="thirdChoice" name="thirdChoice">
            </div>
            <div class="form-group">
                <label>4th Choice</label>
                <input type="text" class="form-control" placeholder="fourthChoice" name="fourthChoice">
            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect1">answer</label>
                <select class="form-control" id="exampleFormControlSelect1" name="answer">
                    <option value="first">1</option>
                    <option value="second">2</option>
                    <option value="third">3</option>
                    <option value="fourth">4</option>
                </select>
            </div>
            <button class="btn btn-outline-info" type="submit">Submit</button>
        </fieldset>
    </form>


    <hr>
    <hr>
    <form class="m-5" action="/newQuestion" method="post">
        <fieldset>
            <legend>Correct Question:</legend>
            <input type="hidden" name="type" value="correct">

            <div class="form-group">
                <label>Course</label>
                <input type="text" class="form-control" placeholder="Course Title" name="course">
            </div>
            <div class="form-group">
                <label>Question Content</label>
                <textarea name="content" class="form-control" rows="3"></textarea>
            </div>
            <div class="form-group">
                <label>answer</label>
                <select class="form-control" name="answer">
                    <option value="true">True</option>
                    <option value="false">False</option>
                </select>
            </div>
            <button class="btn btn-outline-info" type="submit">Submit</button>
        </fieldset>
    </form>
</div>

<footer>
    {{>footer}}
</footer>