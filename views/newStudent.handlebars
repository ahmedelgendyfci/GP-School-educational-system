<section class="new-student" id="Button1">
    <section class="w-75 mx-auto">
        <form>
            <div class="form-row">
                <div class="form-group px-4 col-md-6">
                    <label for="inputFirstName">First Name</label>
                    <input type="text" class="form-control" placeholder="First name" name="firstName" id="firstName" value="">
                </div>
                <div class="form-group  px-4  col-md-6">
                    <label for="inputLastName">Last Name</label>
                    <input type="text" class="form-control" placeholder="Last name" name="lastName" id="lastName" value="">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group px-4  col-md-6">
                    <label for="inputEmail4">Email</label>
                    <input id="email" type="email" class="form-control" placeholder="example@mail.com" name="email" value="">
                </div>
                <div class="form-group px-4  col-md-6">
                    <label for="inputPassword4">Password</label>
                    <input id="password" type="password" class="form-control"  placeholder="Student password" name="password" value="">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group px-4  col-md-6">
                    <label for="inputAddress">Address</label>
                    <input type="text" class="form-control" id="address" placeholder="1234 Main St" name="address" value="">
                </div>
                <div class="form-group px-4  col-md-6">
                    <label for="inputNumber">Phone Number</label>
                    <input type="number" class="form-control" id="phoneNumber" placeholder="1023456789" name="phoneNumber" value="">
                </div>
            </div>
            <div class="form-row">
                <fieldset class="form-group px-4  col-md-6">
                    <div class="row">
                        <legend class="col-form-label col-sm-2 pt-0 pl-0">Gender</legend>
                        <div class="col-sm-10">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gender" id="g1" value="male"
                                       checked>
                                <label class="form-check-label" for="gridRadios1">
                                    Male
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gender" id="g2" value="femal">
                                <label class="form-check-label" for="gridRadios2">
                                    Femal
                                </label>
                            </div>
                        </div>
                    </div>
                </fieldset>

                <div class="form-group px-4  col-md-6">
                    <label for="inputLevel">level</label>
                    <input type="number" class="form-control" id="level" placeholder="1, 2, 3, 4, 5, 6" name="level" value="">
                </div>

                <fieldset class="form-group px-4  col-md-6">
                    <div class="row">
                        <legend class="col-form-label col-sm-2 pt-0 pl-0">Fee</legend>
                        <div class="col-sm-10">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="fee" id="f1" value="true"
                                       >
                                <label class="form-check-label" for="gridRadios1">
                                    Yes
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="fee" id="f2" value="false" checked>
                                <label class="form-check-label" for="gridRadios2">
                                    No
                                </label>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>

        </form>

        <button type="submit" class="btn btn-outline-secondary m-4" onclick="sendNewStuData()">Submit</button>
    </section>
</section>
